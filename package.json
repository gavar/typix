{
  "name": "typix",
  "version": "1.0.0-dev",
  "private": true,
  "homepage": "https://github.com/gavar/typix#readme",
  "bugs": {
    "url": "https://github.com/gavar/typix/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gavar/typix.git"
  },
  "license": "MIT",
  "author": "Max Stankevich <max.stankevich.me@gmail.com>",
  "main": "",
  "types": "",
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/@types/*"
    ]
  },
  "scripts": {
    "git:release": "git checkout master && git merge --ff develop && git checkout develop",
    "lint": "eslint **/*.{js,ts}",
    "prettier": "prettier **/*.{js,ts,json,yml,md}",
    "semantic-release": "semantic-release --dry-run",
    "sort-package-json:all": "node scripts/sort-package-json-all.js"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@typix/commitlint-config"
    ]
  },
  "lint-staged": {
    "*.*rc": "prettier --check",
    "*.{js,ts}": "eslint",
    "*.{json,yml,md}": "prettier --check"
  },
  "devDependencies": {
    "dotenv": "^8.0.0",
    "dotenv-expand": "^5.1.0",
    "globby": "^10.0.1",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "semantic-release": "^16.0.0-beta",
    "sort-package-json": "^1.22.1",
    "ts-node": "^8.3.0",
    "tsutils": "^3.14.0",
    "typescript": "^3.6.0-dev"
  },
  "peerDependencies": {
    "execa": ">=1.0.0"
  }
}
